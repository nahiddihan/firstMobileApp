<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Noakhali Science And technology University"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#000"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:src="@drawable/logonstu"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nahidul Islam"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:textColor="#000"
        android:layout_marginLeft="60dp"
        android:id="@+id/studentName"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll :"
        android:textSize="18sp"
        android:layout_gravity="left"
        android:textColor="#000"
        android:paddingBottom="3dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASH1001015M"
        android:textSize="18sp"
        android:layout_gravity="left"
        android:textColor="#000"
        android:paddingBottom="3dp"
        android:id="@+id/rollId"
        android:paddingLeft="10dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Year :"
        android:textSize="18sp"
       android:textColor="#000"

        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="2"
        android:textSize="18sp"
        android:id="@+id/tvyear"
        android:textColor="#000"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Term :"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="2"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tvTerm"

        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Session :"
        android:textSize="18sp"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="2009-10"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/student_session"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile :"
            android:textSize="18sp"
            android:layout_gravity="left"
            android:textColor="#000"
            android:paddingBottom="3dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01820922774"
            android:textSize="18sp"
            android:paddingRight="5dp"
            android:textColor="#000"
            android:paddingBottom="5dp"
            android:id="@+id/student_mobile"
            android:paddingLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textSize="20sp"
            android:textColor="#000"
            android:paddingBottom="5dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nahidcste@gmail.com"
            android:textSize="18sp"
            android:textColor="#000"
            android:id="@+id/student_email"
            android:layout_marginLeft="10dp"

            />
    </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Computer Science and Telecommunication Engineering"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:id="@+id/student_department"
        android:textColor="#000"
        />


</LinearLayout>