<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/tvCoursetitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="CSTE 4201"
        android:gravity="center"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/tvCourseCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="CSTE 4201"
        android:gravity="center"
        android:textSize="15sp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Credit: "
            android:textColor="#000"
            android:gravity="left"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tvCourseCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03"
            android:textColor="#000"
            android:gravity="left"
            android:textSize="18dp"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour/week:"
            android:textColor="#000"
           android:layout_marginLeft="40dp"
            android:textSize="18dp"
           />

        <TextView
            android:id="@+id/tvCreditHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000"
            android:gravity="left"
            android:textSize="18dp"
            android:paddingLeft="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="360dp"
        >
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSyllabus"
                android:padding="5dp"
                android:text="PART OF THE se,Syllabus of the Course,Syllabus of the Course:Syllabus of the Course
         PART OF THE COURSE:Syllabus of the Course,Syllabus of the Course,Syllabus of the Course:Syllabus of the Course
         PART OF THE COURSE:Syllabus of the Course,Syllabus of the Course,Syllabus of the Course:Syllabus of the Course
         PART OF THE COURSE:Syllabus of the Course,Syllabus of the Course,Syllabus of the Course:Syllabus of the Course"
                />
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btBack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:background="#E0E0E0"
        android:textSize="15sp"

        />

</LinearLayout>